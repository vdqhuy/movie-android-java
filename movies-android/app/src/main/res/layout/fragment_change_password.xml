<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ChangePasswordFragment"
    android:id="@+id/fragment_pass"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/tiplayout_register_password1"
        android:layout_height="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:passwordToggleTint="@color/white_50"
        app:counterTextColor="@color/white"
        app:errorTextColor="@color/red_100"
        android:theme="@style/AppTheme">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:elegantTextHeight="false"
            android:id="@+id/edittext_register_password1"
            android:textColor="@color/white"
            android:hint="Mật khẩu cũ"
            android:maxLength="20"
            android:inputType="textPassword"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/tiplayout_register_password"
        android:layout_height="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/white_50"
        app:counterEnabled="true"
        app:counterOverflowTextAppearance="@style/CounterOverFlow"
        app:counterTextColor="@color/white"
        app:counterMaxLength="20"
        app:errorTextColor="@color/red_100"
        android:theme="@style/AppTheme">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:elegantTextHeight="false"
            android:id="@+id/edittext_register_password"
            android:textColor="@color/white"
            android:hint="Mật khẩu mới"
            android:maxLength="20"
            android:inputType="textPassword"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/tiplayout_register_confirm_password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/white_50"
        app:counterEnabled="true"
        app:counterOverflowTextAppearance="@style/CounterOverFlow"
        app:counterTextColor="@color/white"
        app:counterMaxLength="20"
        app:errorTextColor="@color/red_100"
        android:theme="@style/AppTheme">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:elegantTextHeight="false"
            android:id="@+id/edittext_register_confirm_password"
            android:textColor="@color/white"
            android:hint="Nhập lại mật khẩu mới"
            android:maxLength="20"
            android:inputType="textPassword"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>